generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int   @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  dzongkhag String
  gewog     String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
model book{
  id Int @unique @default(autoincrement())
  title String
  autor String
  price Int
  image String
  genre String @default("Unknown")
}
model cart {
  id          Int      @id @default(autoincrement())
  image       String 
  userid      Int  @default(0)
  useremail   String
  bookid      Int
  booktitle   String
  bookauthor  String
  price       Int
  bookgenre   String
  quantity    Int      @default(1)       
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt        
}

model Order {
  id              Int      @id @default(autoincrement())
  name            String
  email           String
  phone           String
  country         String
  city            String
  street          String
  zip             String
  cart            Json
  createdAt       DateTime @default(now())
}
model Notification {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
}

